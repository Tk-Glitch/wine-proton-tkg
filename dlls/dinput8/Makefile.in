MODULE    = dinput8.dll
IMPORTLIB = dinput8
IMPORTS   = dinput8 dxguid uuid comctl32 ole32 user32 advapi32 setupapi hid
EXTRADEFS = -DDIRECTINPUT_VERSION=0x0800
EXTRALIBS = $(IOKIT_LIBS) $(FORCEFEEDBACK_LIBS) $(SDL2_LIBS)
EXTRAINCL = $(SDL2_CFLAGS)
PARENTSRC = ../dinput

C_SRCS = \
	config.c \
	data_formats.c \
	device.c \
	dinput_main.c \
	effect_linuxinput.c \
	effect_sdl.c \
	joystick.c \
	joystick_linux.c \
	joystick_linuxinput.c \
	joystick_sdl.c \
	joystick_osx.c \
	keyboard.c \
	mouse.c

IDL_SRCS = dinput8.idl

RC_SRCS = \
	dinput.rc \
	version.rc
